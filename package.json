{
  "name": "gaiama-endpoint-newsletter",
  "version": "1.1.0",
  "description": "Newsletter endpoint for GaiAma.org website",
  "main": "index.js",
  "author": "CanRau <cansrau@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "micro",
    "dev": "export $(cat ../.env | grep -v ^# | xargs) && micro-dev",
    "transpile": "NODE_ENV=production babel src --out-dir .",
    "watch": "yarn transpile --watch",
    "build": "yarn transpile && yarn lang:compile",
    "deploy": "now -t $NOW_TOKEN --npm",
    "alias": "now alias -t $NOW_TOKEN",
    "now:cleanup": "now rm gaiama-endpoint-newsletter --safe --yes",
    "lang:add": "lingui add-locale",
    "lang:extract": "lingui extract",
    "lang:compile": "lingui compile"
  },
  "dependencies": {
    "@lingui/cli": "^2.0.7",
    "@lingui/core": "^2.0.7",
    "autolinker": "^1.6.2",
    "content-type": "^1.0.4",
    "cuid": "^2.1.1",
    "helmet": "^3.12.0",
    "heml": "^1.1.3",
    "is-disposable-email": "^0.0.1",
    "micro": "^9.1.4",
    "micro-cors": "^0.1.0",
    "micro-nosniff": "^1.0.1",
    "micro-ratelimit": "^0.3.0",
    "microrouter": "^3.1.2",
    "mjml": "^4.0.5",
    "moment-timezone": "^0.5.17",
    "ramda": "^0.25.0",
    "sanitize-html": "^1.18.2",
    "sparkpost": "^2.1.2",
    "urlencoded-body-parser": "^2.0.1",
    "validator": "^9.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.42",
    "@babel/core": "^7.0.0-beta.42",
    "@babel/preset-env": "^7.0.0-beta.42",
    "@lingui/babel-plugin-transform-js": "^2.0.7",
    "ava": "^0.25.0",
    "babel-eslint": "^8.2.2",
    "eslint": "^4.18.1",
    "eslint-config-google": "^0.9.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "micro-dev": "^2.2.2",
    "now": "^11.1.7",
    "prettier": "^1.11.1",
    "retire": "^1.6.0",
    "test-listen": "^1.1.0"
  }
}
